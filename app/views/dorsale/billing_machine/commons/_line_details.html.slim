tr.line
  td.line-label
    = text2html line.label

  td.line-quantity
    = number line.quantity

  td.line-unit
    = line.unit

  - if ::Dorsale::BillingMachine.vat_mode == :multiple
    td.line-vat_rate
      = percentage(line.vat_rate)

  td.line-unit_price
    = bm_currency line.unit_price

  td.line-total
    = bm_currency line.total
